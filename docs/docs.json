{
  "$schema": "https://mintlify.com/docs.json",
  "name": "YoMo",
  "description": "The YoMo Documentation, a serverless LLM function calling framework, enabling developers to build and deploy ai agents with MCP fast and easily.",
  "favicon": "/favicon.ico",
  "theme": "willow",
  "colors": {
    "primary": "#007FFF"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["introduction", "quickstart"]
          },
          {
            "group": "Serverless LLM Function Calling",
            "pages": ["sfn/concept"]
          },
          {
            "group": "YoMo CLI",
            "pages": ["cli/overview", "cli/init", "cli/run", "cli/serve"]
          },
          { "group": "Server Configuation", "pages": [
            "server-configuration/llm-bridge",
            "server-configuration/mcp-bridge"
            ] 
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": ["api-ref/intro"]
          },
          {
            "group": "Endpoint Examples",
            "pages": ["api-ref/endpoint/post"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://yomo.run",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://discord.gg/RMtNhx7vds",
          "icon": "discord"
        },
        {
          "anchor": "Github",
          "href": "https://github.com/yomorun/yomo",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/images/yomo-logo.png",
    "dark": "/images/yomo-logo.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:cc@yomo.run"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Github",
      "href": "https://github.com/yomorun/yomo"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/yomohq",
      "github": "https://github.com/yomorun",
      "linkedin": "https://linkedin.com/company/allegro"
    }
  }
